@page "/earthworks/surveying-and-engineering"
@using System.Configuration
@{
    ViewBag.Title = "Surveying and Engineering";
    ViewBag.NavButtonNames = "construction-services-nav-btn,surveying-and-engineering-nav-btn";
}
@section head{
    <meta name='description' content='Our dedicated civil engineering team are well experienced in all areas of setting out and data collection.' />
    <meta name='keywords' content='surveying and engineering' />
}
<div class="main-img">
    <partial name='partials/_image' model='new RJHWebsite.Models.ImageModel(){ ImageClassName = "main-img",ImageName="surveying-and-engineering-site", ImageDescription = "Surveying and engineering being undertaken at a site in Norfolk"}'/>
    <div class="v-center-outer background-gradient">
        <div class="v-center-middle ml-img-overlay">
            <div class="v-center-inner">
                <h1 class="img-overlay-title">Surveying and Engineering</h1>
            </div>
        </div>
    </div>
</div>
<div class="page-with-sidebar-container">
    <div class="page-with-sidebar-main">
        <div class="left-right-padding">
             <div class="row">
                <nav aria-label="breadcrumb" class="mt-4">
                    <ol class="breadcrumb pl-0">
                        <li class="breadcrumb-item"><a href="@ConfigurationManager.AppSettings["Home"]">Home</a></li>
                        <li class="breadcrumb-item"><a href="@ConfigurationManager.AppSettings["ConstructionServices"]">Construction Services</a></li>
                        <li class="breadcrumb-item"><a href="@ConfigurationManager.AppSettings["EarthworkServices"]">Earthworks Services</a></li>
                        <li class="breadcrumb-item active"><a href="#">Surveying and Engineering</a></li>
                    </ol>
                    <hr class="mb-0" />
                </nav>
            </div>
            <div class="top-bottom-padding">
                <h2 class="body-title f1">
                    Surveying and Engineering
                </h2>
                <p>
                    Our dedicated civil engineering team are well experienced in all areas of setting out and data collection. 
                    <br /><br />Here at Rory J Holbrook, we are proud to use Leica geosystems for all our mapping requirements, our bulldozers 
                    are equipped with Leica MC1 3D machine control enabling us to to undertake <a href="@ConfigurationManager.AppSettings["Earthworks"]">large earthworks</a> and infrastructure 
                    projects to the smallest of tolerances. 
                    <br /><br />Furthermore, with the Leica ICon system we can remotely monitor the status 
                    of the machine and upload or remove design models without direct access.
                </p>
                <partial name='partials/_image' model='new RJHWebsite.Models.ImageModel(){ ImageClassName = "img-in-text w-lg-50 w-75",ImageName="surveying-engineering-earthworks", ImageDescription = "Large earthworks and infrastructure being undertaken using Leica capture technology",IncludeOtherSizes = false}'/>
            </div>
            
        </div>
    </div>
     <div class="sidebar bg-light-light-grey">
        @await Component.InvokeAsync("OtherPagesSnippet", new RJHWebsite.Models.OtherPagesSnippetModel
        {
            SnippetTypeEnum = (int)Enums.SnippetTypes.Sidebar,
            CurrentPage = "earthworks",
            ParentPage = "construction",
            CssStyleEnum = (int)RJHWebsite.Enums.CssStyles.LightGrey,
            Title = "See Our Other Construction Services"
        })
    </div>
</div>

@await Component.InvokeAsync("OtherPagesSnippet", new RJHWebsite.Models.OtherPagesSnippetModel
{
    SnippetTypeEnum = (int)Enums.SnippetTypes.FullBottomBar,
    CurrentPage = "siteclearance",
    ParentPage = "construction",
    CssStyleEnum = (int)RJHWebsite.Enums.CssStyles.Blue,
    Title = "See Our Other Construction Services"
})

@await Component.InvokeAsync("OtherPagesSnippet", new RJHWebsite.Models.OtherPagesSnippetModel
{
    SnippetTypeEnum = (int)Enums.SnippetTypes.FullBottomBar,
    CurrentPage = "",
    ParentPage = "haulage",
    CssStyleEnum = (int)RJHWebsite.Enums.CssStyles.Dark,
    Title = "Explore Our Haulage Services"
})

@section scripts {
    <script>
        $('#plant-hire-nav-btn').css('color', 'black').css('font-weight', 'bold');
    </script>
}
