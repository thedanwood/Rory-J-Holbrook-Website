@page "/aggregates"
@using RJHWebsite.Enums
@using System.Configuration
@{
    ViewBag.NavButtonNames = "construction-services-nav-btn,aggregate-services-nav-btn";
    ViewBag.Title = "Aggregates";
}
@section head{
    <meta name='description' content="Aggregate services available in East Anglia and across the UK" />
}
<partial name='partials/_image' model='new RJHWebsite.Models.ImageModel(){ ImageClassName = "main-img",ImageName="aggregate-supplied-at-site", ImageDescription = "Aerial view of material stocks in Lakenheath"}' />
<div class="page-name">
    <h1>Aggregates</h1>
</div>
<div class="page-with-sidebar-container">
    <div class="page-with-sidebar-main">
        <div class="left-right-padding">
            <div class="row">
                <nav aria-label="breadcrumb" class="mt-4">
                    <ol class="breadcrumb pl-0">
                        <li class="breadcrumb-item"><a href="@ConfigurationManager.AppSettings["Home"]">Home</a></li>
                         <li class="breadcrumb-item"><a href="@ConfigurationManager.AppSettings["ConstructionServices"]">Construction</a></li>
                        <li class="breadcrumb-item active"><a href="#">Aggregates</a></li>
                    </ol>
                    <hr class="mb-0" />
                </nav>
            </div>
            <div class="top-bottom-padding">
                <div class="nav-page-tile-container">
                    <partial name="partials/construction/_aggregatesuppliestile" model="@(int)TileStyles.SquareZoom" />
                </div>
                <div class="nav-page-tile-container">
                    <partial name="partials/construction/_aggregatecollectiontile" model="@(int)TileStyles.SquareZoom" />
                </div>
                <div class="nav-page-tile-container">
                    <partial name="partials/construction/_aggregatecalculatortile" model="@(int)TileStyles.SquareZoom" />
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar bg-light-light-grey">
        @await Component.InvokeAsync("OtherPagesSnippet", new RJHWebsite.Models.OtherPagesSnippetModel
        {
            SnippetTypeEnum = (int)Enums.SnippetTypes.Sidebar,
            CurrentPage = "",
            ParentPage = "construction",
            CssStyleEnum = (int)RJHWebsite.Enums.CssStyles.LightGrey,
            Title = "Explore Our Construction Services"
        })
    </div>
</div>
@await Component.InvokeAsync("TestimonialsSnippet", new
{
    snippetTypeEnum = (int)Enums.SnippetTypes.FullBottomBar,
    variationEnum = (int)Enums.Variations.Variation2,
    cssStyleEnum = (int)RJHWebsite.Enums.CssStyles.Dark,
})
@await Component.InvokeAsync("OtherPagesSnippet", new RJHWebsite.Models.OtherPagesSnippetModel
{
    SnippetTypeEnum = (int)Enums.SnippetTypes.FullBottomBar,
    CurrentPage = "",
    ParentPage = "haulage",
    CssStyleEnum = (int)RJHWebsite.Enums.CssStyles.Blue,
    Title = "We Also Offer Haulage Services"
})
@await Component.InvokeAsync("NewsSnippet", new { snippetTypeEnum = (int)Enums.SnippetTypes.FullBottomBar, numberOfArticles = 2, cssStyleEnum = (int)Enums.CssStyles.LightBlue })
