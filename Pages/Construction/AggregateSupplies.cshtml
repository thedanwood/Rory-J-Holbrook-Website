@page "/aggregates/aggregate-supply"
@model RJHWebsite.Pages.Construction.AggregatesModel
@using RJHWebsite.Enums 
@using System.Configuration
@{
    ViewBag.Title = "Aggregate Suppliers in East Anglia";
    ViewBag.NavButtonNames = "construction-services-nav-btn,aggregate-supplies-sub-nav-item";
}
@section head{
    <meta name='description' content='Supplying all types of aggregates, from decorative to building. Whatever your requirements, we are here to help.' />
    @if (Model.Type != null)
    {
        <meta name="robots" content="noindex">
    }
}
<div id="enquiry-success-message" class="alert alert-success">
    <h4><i class="fas fa-check pr-3"></i>Your aggregate enquiry has been successfully sent.</h4>
    <br />
    <p>One of our dedicated sales team will get in touch as soon as they can.</p>
    <p class="mb-0">Can't wait? Call our Transport Office: <a href="tel:01963 718306">01953 718306</a></p>
</div>
<div class="modal fade" id="full-aggregate-calculator" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="border-radius:0!important;">
            <div class="modal-header bg-lightblue">
                <h5 class="modal-title" id="exampleModalLongTitle"><p><i class="fas fa-calculator pr-2"></i>Aggregate Calculator</p></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-inline">
                    <label for="Type" class="pr-2">Type </label>
                    <select id="aggregate-type" class="form-control">
                        <option value="1.7">Ballast</option>
                        <option value="1.8">Crushed Asphalt</option>
                        <option value="1.7">Crushed Brick Rubble</option>
                        <option value="1.7">Crushed Concrete</option>
                        <option value="2.1">Granite</option>
                        <option value="1.8">Gravel</option>
                        <option value="1.7">Hoggin</option>
                        <option value="1.7">MOT Type 1 Limestone</option>
                        <option value="1.6">Sand</option>
                        <option value="1.8">Topsoil</option>
                        <option value="1.7">UB BLEND SHW SERIES 800 Type 1 Limestone</option>
                    </select>
                </div>
                <form id="aggregate-form">
                    <div class="mt-3">
                        <label for="length" class="pr-2"><p>Length (meters)</p></label>
                        <input type="number" required id="length" name="length" class="form-control calc-field" />
                    </div>
                    <div class="mt-3">
                        <label for="width" class="pr-2"><p>Width (meters)</p></label>
                        <input type="number" required id="width" name="width" class="form-control calc-field" />
                    </div>
                    <div class="mt-3">
                        <label for="depth" class="pr-2"><p>Depth (millimetres)</p></label>
                        <input type="number" required id="depth" name="depth" class="form-control calc-field" />
                    </div>
                    <input type="submit" class="btn btn-success mt-4" id="calculate-aggregates" value="Calculate">
                </form>
                <div class="mt-3">
                    <label for="required" class="pr-2"><p>Approximate tonnage required</p></label>
                    <input type="text" id="required" name="required" disabled="disabled" class="form-control calc-field" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div id="enable-cookies">
    <div id="cookie-content">
        <div>
            <h2><i class="fas fa-cookie-bite pr-2"></i> In order to use this feature you must accept cookies.</h2>
        </div>
        <div class="mt-3">
            <p>We will not use cookies for any other purpose besides storing your aggregate enquiry list data.</p>
        </div>
        <div class="mt-5">
            <button class="btn-lg btn btn-success mr-2" id="accept-cookies">Accept</button>
            <button class="btn-lg btn btn-danger ml-2" id="reject-cookies">Reject</button>
        </div>
    </div>
</div>
