@section scripts{   `
    <script>
        @{
            if(Model.Type != null && Model.Type != ""){
                @:$('#full-aggregate-calculator').modal('show');
            }
        }
        $('#aggregate-form').submit(function (e) {
            e.preventDefault();
            if (validateAggregatesForm()) {
                var length = $('#length').val();
                var width = $('#width').val();
                var depth = $('#depth').val();
                var convertionRate = $('#aggregate-type option:selected').val();
                var cupicMeterCubed = length * width * (depth / 1000);
                var value = cupicMeterCubed * convertionRate;
                $('#required').val(value.toFixed(1));
            }
        })
        function validateAggregatesForm() {
            if ($('#length').val() != "" && $('#width').val() != "" && $('#depth').val() != "") {
                return true;
            } else {
                return false;
            }
        }
        var categorys = [];
        @foreach (var category in Model.AggregateCategories)
        {
            @:categorys.push('@category.AggregateCategorySelectorName');
        }
        @{
            if(TempData["EnquirySubmitted"] != null)
            {
                if ((bool)TempData["EnquirySubmitted"] == true) {
                    @:$('#enquiry-success-message').show();
                    @:setTimeout(function () { $('#enquiry-success-message').fadeOut(); }, 10000);
                }
            }
        }
    </script>
    <script src="/js/aggregates.js"></script>
}
